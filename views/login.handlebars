<div class="container">
    <div class="row mt-4">
        <div class="col-4 offset-4 align-self-center">
            <form>
                <div class="mb-3">
                    <label for="email-login" class="form-label">Email Address:</label>
                    <input type="email" class="form-control" id="email-login">
                </div>
                <div class="mb-3">
                    <label for="password-login" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-login">
                </div>
                <div>
                    <button type="submit" id="login" class="btn btn-primary">Login</button>
                </div>
            </form>
            <h6 class="mt-3">Click <span class="register">here to register</span></h6>
        </div>
    </div>
    <div class="row mt-4" id="signup-form">
        <div class="col-4 offset-4 align-self-center">
            <form>
                <div class="mb-3">
                    <label for="email-signup" class="form-label">Email Address:</label>
                    <input type="email" class="form-control" id="email-signup">
                </div>
                <div class="mb-3">
                    <label for="username-signup" class="form-label">Username:</label>
                    <input type="text" class="form-control" id="username-signup">
                </div>
                <div class="mb-3">
                    <label for="password-signup" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-signup">
                </div>
                <div>
                    <button type="submit" id="signup" class="btn btn-primary">Signup</button>
                </div>
            </form>
        </div>
    </div>                    
</div>
<script src="/js/login.js"></script>