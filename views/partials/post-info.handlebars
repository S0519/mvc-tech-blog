<div class="container">
    <div class="row mt-4" id="login-form">
        <div class="col-8 offset-2 align-self-center">
            <article class="post">
              <div class="title card">
                <div class="card-header">
                  <h3 class="card-title">{{title}}</h3>
                </div>
                <div class="card-body">
                  <p class="card-text ">{{content}}</p>
                </div>
                <div class="meta card-footer">
                  by {{user.username}} on
                  {{format_date created_at}}
                  |
                  <a class="card-footer" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>

                </div>

              </div>
            </article>
        </div>
    </div>
</div>
